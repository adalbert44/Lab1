@model lab1.DishIngredient

@{
    ViewData["Title"] = "Додати інгредієнт";
}

<h1>Додати інгредієнт для страви @ViewBag.DishName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IngredientId" class="control-label"></label>
                <select asp-for="IngredientId" class="form-control" asp-items="ViewBag.IngredientId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>

            <input type="hidden" value="@ViewBag.DishId" name="DishId" />
        </form>
    </div>
</div>

<div>
    <a href='javascript:history.go(-1)'>Повернутись</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
